{
  "hosting": {
    "site": "capital-db",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "host": "localhost",
      "port": "3001"
    },
    "auth": {
      "port": 3099
    },
    "firestore": {
      "port": 3010
    },
    "database": {
      "port": 3020
    },
    "ui": {
      "enabled": true
    }
  }
}
